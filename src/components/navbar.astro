<nav>
    <div class="navbar">
      <a href="/" class="logo">
        <img src="/home_button.png" alt="Home" />
      </a>
      <div class="nav-links">
        <a href="/aboutMe">About Me</a>
        <a href="/projects">Projects</a>
        <a href="/art">Art Gallery</a>
      </div>
      <button class="menu-toggle" aria-label="Toggle Menu">
        â˜°
      </button>
    </div>
    <style>
      /* General Navbar Styles */
      nav {
        background: #000;
        padding: 10px;
      }
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .nav-links {
        display: flex;
        gap: 20px;
      }
      nav a {
        color: white;
        text-decoration: none;
        font-size: 1.2em;
      }
      nav img {
        height: 50px;
      }
      .menu-toggle {
        display: none;
        background: none;
        color: white;
        border: none;
        font-size: 1.5em;
        cursor: pointer;
      }
  
      /* Responsive Styles */
      @media (max-width: 768px) {
        .nav-links {
          display: none;
          flex-direction: column;
          background: #000;
          position: absolute;
          top: 60px;
          right: 10px;
          padding: 10px;
          border-radius: 5px;
          z-index: 20;
        }
        .nav-links.show {
          display: flex;
        }
        .menu-toggle {
          display: block;
        }
      }
    </style>
  </nav>
  
  <script type="module">
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.querySelector('.menu-toggle');
      const navLinks = document.querySelector('.nav-links');
  
      menuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('show');
      });
    });
  </script>
  