---
const title = "Welcome to My Portfolio";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        overflow: hidden;
      }

      header {
        background-color: #333;
        color: white;
        padding: 20px;
        text-align: center;
        z-index: 10;
        position: relative;
      }

      header h1 {
        margin: 0;
        font-size: 2.5em;
        transition: transform 0.3s ease;
      }

      header p {
        margin: 0.5em 0;
        font-size: 1.2em;
        opacity: 0;
        animation: fadeIn 1s forwards 0.5s;
      }

      nav ul {
        list-style: none;
        padding: 0;
      }

      nav ul li {
        display: inline-block;
        margin: 0 10px;
      }

      nav ul li a {
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.2em;
        transition: color 0.3s ease, transform 0.3s ease, letter-spacing 0.3s ease;
      }

      nav ul li a::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 2px;
        background-color: #ff9900;
        transition: width 0.3s ease;
      }

      nav ul li a:hover {
        transform: scale(1.1);
        color: #ff9900;
      }

      nav ul li a:hover::after {
        width: 100%;
      }

      footer {
        text-align: center;
        padding: 10px;
        background-color: #333;
        color: white;
      }

      footer a {
        color: #fff;
        text-decoration: none;
      }

      footer a:hover {
        text-decoration: underline;
      }

      /* Mouse move effect */
      .moving-background {
        position: absolute;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        pointer-events: none;
        transition: transform 0.1s ease-out;
        opacity: 0.6;
      }

      /* Backgrounds with different colors for visual effect */
      .moving-background:nth-child(1) {
        background-color: rgba(255, 153, 0, 0.6);
      }

      .moving-background:nth-child(2) {
        background-color: rgba(0, 255, 255, 0.6);
      }

      .moving-background:nth-child(3) {
        background-color: rgba(255, 0, 255, 0.6);
      }

      .moving-background:nth-child(4) {
        background-color: rgba(255, 255, 0, 0.6);
      }

      /* Fade in effect on page load */
      @keyframes fadeIn {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }
    </style>
  </head>
  <body>
    <!-- Mouse Follow Effect -->
    <div class="moving-background"></div>
    <div class="moving-background"></div>
    <div class="moving-background"></div>
    <div class="moving-background"></div>

    <header>
      <h1>Welcome to My Portfolio</h1>
      <p>Here are some of the projects I have worked on.</p>
      <nav>
        <ul>
          <li><a href="/projects">View My Projects</a></li>
        </ul>
      </nav>
    </header>

    <footer>
      <p>
        Created with Astro - <a href="https://astro.build">Visit Astro</a>
      </p>
    </footer>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const movingBackgrounds = document.querySelectorAll(
          ".moving-background"
        );

        if (movingBackgrounds.length > 0) {
          document.addEventListener("mousemove", (e) => {
            // Get mouse position
            const x = e.clientX;
            const y = e.clientY;

            // Update the position for each of the 4 background elements
            movingBackgrounds.forEach((bg, index) => {
              const bgElement = bg as HTMLElement; // Cast to HTMLElement
              const offsetX = index * 10;  // Offset each background slightly
              const offsetY = index * 10;  // Offset each background slightly

              // Position the background elements around the mouse in a target-like effect
              bgElement.style.transform = `translate(${x - 40 + offsetX}px, ${y - 40 + offsetY}px)`;
            });
          });
        }
      });
    </script>
  </body>
</html>
